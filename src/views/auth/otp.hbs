<div id="otpForm" class="space-y-6">
    <h2 class="text-2xl font-semibold text-green-100 text-center">Enter OTP</h2>
    <p class="text-sm text-green-200 text-center">
        Enter your OTP code from your email inbox
    </p>
    
    <form class="space-y-6"
          hx-post="/auth/otp/verify"
          hx-target="#otpFormResult"
          hx-swap="innerHTML"
          hx-indicator="#spinner">
        <div class="space-y-2">
            <label for="otp" class="block text-sm font-medium text-green-100">
                OTP Code
            </label>
            <input class="w-full rounded-xl border-green-200 shadow-sm focus:border-green-500 focus:ring-green-500 bg-green-50/30 px-4 py-3" 
                   type="number" 
                   name="userInputCode"                
                   required
                   placeholder="Enter your OTP here" 
                   min="0" 
                   pattern="\d*"> 
        </div>
        
        <!-- Hidden fields for deviceId and preAuthSessionId -->
        <input type="hidden" name="deviceId" id="deviceId" value="{{deviceId}}">
        <input type="hidden" name="preAuthSessionId" id="preAuthSessionId" value="{{preAuthSessionId}}">

        <button class="w-full py-3 px-4 border border-transparent rounded-xl text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out"
                type="submit">
            Send OTP
            <img id="spinner" class="htmx-indicator" src="https://htmx.org/img/bars.svg"/>
        </button>
    </form>
</div>
<div id="otpFormResult"></div>